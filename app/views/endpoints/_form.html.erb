<%= form_with(model: endpoint, class: "contents") do |form| %>
  <% if endpoint.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(endpoint.errors.count, "error") %> prohibited this endpoint from being saved:</h2>

      <ul>
        <% endpoint.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :url %>
    <%= form.text_area :url, rows: 1, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="flex gap-2 pb-1">
    <%= link_to 'Textarea', new_payload_path(:tab => 'textarea'), class: "font-bold text-lg p-2 bg-slate-50 rounded-sm shadow-sm px-4 py-1 hover:bg-slate-100", data: { turbo_frame: 'tab_content'} %>
    <%= link_to 'Other', new_payload_path(:tab => 'other'), class: "font-bold text-lg p-2 bg-slate-50 rounded-sm shadow-sm px-4 py-1 hover:bg-slate-100", data: { turbo_frame: 'tab_content'} %>
  </div>

  <%= turbo_frame_tag 'tab_content' do %>
      <%= form.fields_for :payloads do |payload_fields| %>
      <div class="my-5">
        <%= payload_fields.label :data %>
        <%= payload_fields.text_area :data, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", rows: 10 %>
      </div>
    <% end %>
  <% end %>
 

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
